<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PaymentConfirmationFragment">

  <!-- TODO: Update blank fragment layout -->
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:layout_centerHorizontal="true"
      >
    <ImageView
        android:id="@+id/check_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_check_primary_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/payment_success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Paiement effectué avec succès !"
        android:layout_below="@+id/check_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/redirect"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corners_blue_stroke"
        android:text="Retourner à l'acceuil"
        android:layout_below="@+id/payment_success_text"
        android:layout_centerHorizontal="true"/>

  </RelativeLayout>
</FrameLayout>