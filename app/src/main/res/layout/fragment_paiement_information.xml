<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PaiementInformationFragment">

  <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      android:padding="30dp"

      >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrez le numéro de téléphone"/>
    <EditText
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/telephone"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:hint="9X XX XX XX "
        android:background="#fff"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode de rechargement disponible "/>
    <TextView
        android:id="@+id/mode"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="---"
        android:background="#fff"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Entrez le montant s'il vous plaît (en FCFA)"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/montant_a_payer"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#fff"
        android:inputType="number"
        style="@style/Widget.AppCompat.EditText"
        />

    <Button
        android:id="@+id/payer"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payer"
        android:background="@drawable/rounded_corners_blue"/>
  </LinearLayout>


</FrameLayout>